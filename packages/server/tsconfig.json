{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@dto/*": ["db/dto/*"],
      "@entities/*": ["db/entities/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "exclude": ["node_modules", "dist", "*.sqlite"]
}
